@page
@model PrimeiraAplicacao.Pages.AdicionarModel
@{
}
<div class="box cta">
    <p class="title has-text-centered">
        Adicionar Novo Carro
    </p>
</div>


<form id="formulario" method="POST">

    <div class="form-group row">
        <div class="form-group col-md-6">
            <label>Marca</label>
            <input class="imputInserir" type="text" name="marca"><br>
        </div>
        <div class="form-group col-md-6">
            <label>Modelo</label>
            <input class="imputInserir" type="text" name="modelo"><br>
        </div>
    </div>

    <div class="form-group row">
        <div class="form-group col-md-6">
            <label>Cor</label>
            <input class="imputInserir" type="text" name="cor"><br>
        </div>
        <div class="form-group col-md-6">
            <label>Posicionamento Cilindros</label>
            <input class="imputInserir" type="text" name="posicionamento_cilindros"><br>
        </div>
    </div>


    <div class="form-group row">
        <div class="form-group col-md-6">
            <label>Cilindros</label>
            <input class="imputInserir" type="text" name="cilindros"><br>
        </div>
        <div class="form-group col-md-6">
            <label>Litragem</label>
            <input class="imputInserir" type="text" name="litragem"><br>
        </div>
    </div>

    <div class="form-group row">
        <div class="form-group col-md-6">
            <label>Observação</label>
            <input class="imputInserir" type="text" name="observacao"><br>
        </div>
    </div>

    <div class="has-text-centered">
        <input type="submit" class="btn btn-primary" id="enter" value="Adicionar">
        <button type="button" class="btn btn-primary" id="voltar" onclick="window.location='Index';">Tela Inicial</button>
    </div>
</form>
